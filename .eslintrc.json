{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "prettier/prettier": ["error"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  }
}
